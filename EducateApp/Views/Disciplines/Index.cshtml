@model EducateApp.ViewModels.Disciplines.IndexDisciplinesViewModel

@{
    ViewData["Title"] = "Дисциплины";
}

<nav aria-label="breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">Главная</a></li>
        <li class="breadcrumb-item active">Дисциплины</li>
    </ol>
</nav>

<h2>Дисциплины</h2>

<div class="d-flex justify-content-between">
    <div class="p-2">
        <ul class="nav">

            <div id="modDialog" class="modal fade">
                <div id="dialogContent" class="modal-dialog"></div>
            </div>

            <div class="d-flex justify-content-between">
                <div class="p-2">
                    <ul class="nav">
                        <li>
                            <a class="btn text-dark" asp-action="DownloadPattern" title="Скачать шаблон">
                                <i class="fas fa-file-download"></i>
                            </a>
                        </li>
                        <li>
                            <a class="btn text-dark" asp-action="Create">
                                <i class="far fa-plus-square"></i>  Добавить Дисциплину
                            </a>
                        </li>
                    </ul>
                </div>
                <div class="p-2">
                    <form class="form-inline" asp-action="Index" method="get">
                        <div class="form-actions no-color">
                            <p>
                                <input type="text" name="IndexProfModule" placeholder="Индекс проф. модуля" value="@Model.FilterDisciplinesViewModel.SelectedIndexProfModule" class="form-control" />
                                <input type="text" name="ProfModule" placeholder="Проф. модуль" value="@Model.FilterDisciplinesViewModel.SelectedProfModule" class="form-control" />
                                <input type="text" name="Index" placeholder="Индекс" value="@Model.FilterDisciplinesViewModel.SelectedIndex" class="form-control" />
                                <input type="text" name="Name" placeholder="Дисциплина" value="@Model.FilterDisciplinesViewModel.SelectedName" class="form-control" />
                                <input type="text" name="ShortName" placeholder="Короткое название" value="@Model.FilterDisciplinesViewModel.SelectedShortName" class="form-control" />



                                <input type="submit" value="Поиск" class="btn btn-outline-success" /> |
                                <a class="=btn text-dark" asp-action="Index"><i class="fas fa-eraser"></i></a>
                            </p>
                        </div>
                    </form>
                </div>
            </div>
        </ul>
    </div>
</div>
<table class="table">
    <thead>
        <tr>
            <th>
                <a asp-action="IndexProfModule"
                   asp-route-sortOrder="@(Model.SortDisciplinesViewModel.IndexProfModuleSort)"
                   asp-route-code="@(Model.FilterDisciplinesViewModel.SelectedIndexProfModule)"
                   asp-route-name="@(Model.FilterDisciplinesViewModel.SelectedProfModule)"
                   asp-route-name1="@(Model.FilterDisciplinesViewModel.SelectedIndex)"
                   asp-route-name2="@(Model.FilterDisciplinesViewModel.SelectedName)"
                   asp-route-name3="@(Model.FilterDisciplinesViewModel.SelectedShortName)">Индекс проф. модуля</a>

            </th>
            <th>
                <a asp-action="ProfModule"
                   asp-route-sortOrder="@(Model.SortDisciplinesViewModel.ProfModuleSort)"
                   asp-route-code="@(Model.FilterDisciplinesViewModel.SelectedIndexProfModule)"
                   asp-route-name="@(Model.FilterDisciplinesViewModel.SelectedProfModule)"
                   asp-route-name1="@(Model.FilterDisciplinesViewModel.SelectedIndex)"
                   asp-route-name2="@(Model.FilterDisciplinesViewModel.SelectedName)"
                   asp-route-name3="@(Model.FilterDisciplinesViewModel.SelectedShortName)">Проф. модуль</a>
            </th>
            <th>
                <a asp-action="Index"
                   asp-route-sortOrder="@(Model.SortDisciplinesViewModel.IndexSort)"
                   asp-route-code="@(Model.FilterDisciplinesViewModel.SelectedIndexProfModule)"
                   asp-route-name="@(Model.FilterDisciplinesViewModel.SelectedProfModule)"
                   asp-route-name1="@(Model.FilterDisciplinesViewModel.SelectedIndex)"
                   asp-route-name2="@(Model.FilterDisciplinesViewModel.SelectedName)"
                   asp-route-name3="@(Model.FilterDisciplinesViewModel.SelectedShortName)">Индекс</a>
            </th>
            <th>
                <a asp-action="Name"
                   asp-route-sortOrder="@(Model.SortDisciplinesViewModel.NameSort)"
                   asp-route-code="@(Model.FilterDisciplinesViewModel.SelectedIndexProfModule)"
                   asp-route-name="@(Model.FilterDisciplinesViewModel.SelectedProfModule)"
                   asp-route-name1="@(Model.FilterDisciplinesViewModel.SelectedIndex)"
                   asp-route-name2="@(Model.FilterDisciplinesViewModel.SelectedName)"
                   asp-route-name3="@(Model.FilterDisciplinesViewModel.SelectedShortName)">Дисциплина</a>
            </th>
            <th>
                <a asp-action="ShortName"
                   asp-route-sortOrder="@(Model.SortDisciplinesViewModel.ShortNameSort)"
                   asp-route-code="@(Model.FilterDisciplinesViewModel.SelectedIndexProfModule)"
                   asp-route-name="@(Model.FilterDisciplinesViewModel.SelectedProfModule)"
                   asp-route-name1="@(Model.FilterDisciplinesViewModel.SelectedIndex)"
                   asp-route-name2="@(Model.FilterDisciplinesViewModel.SelectedName)"
                   asp-route-name3="@(Model.FilterDisciplinesViewModel.SelectedShortName)">Короткое название</a>
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Disciplines)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.IndexProfModule)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ProfModule)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Index)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ShortName)
                </td>
                <td>
                    <a class="btn text-dark ForId" asp-action="Details" asp-route-id="@item.Id" title="Посмотреть подробнее" id="details">
                        <i class="far fa-eye"></i>
                    </a> |
                    <a class="btn text-dark" asp-action="Edit" asp-route-id="@item.Id" title="Редактировать">
                        <i class="fas fa-pencil-alt"></i>
                    </a> |
                    <a class="btn text-dark" asp-action="Delete" asp-route-id="@item.Id" title="Удалить">
                        <i class="far fa-minus-square"></i>
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>

@section scripts
{
    <script type="text/javascript">
        $(function () {
            $.ajaxSetup({ cache: false });
            $(".ForId").click(function (e) {
                e.preventDefault();
                $.get(this.href, function (data) {
                    $('#dialogContent').html(data);
                    $('#modDialog').modal('show');
                });
            });
        })
    </script>
}


<nav>
<ul class="pagination justify-content-center">
    @if (Model.PageViewModel.HasPreviousPage || Model.PageViewModel.HasNextPage)
    {
        @if (Model.PageViewModel.HasPreviousPage)
        {
            <li class="page-item">
                <a class="page-link" asp-action="Index" title="Назад"
                   asp-route-page="@(Model.PageViewModel.PageNumber - 1)"
                   asp-route-sortOrder="@(Model.SortDisciplinesViewModel.Current)"
                   asp-route-code="@(Model.FilterDisciplinesViewModel.SelectedIndexProfModule)"
                   asp-route-name="@(Model.FilterDisciplinesViewModel.SelectedProfModule)"
                   asp-route-name1="@(Model.FilterDisciplinesViewModel.SelectedIndex)"
                   asp-route-name2="@(Model.FilterDisciplinesViewModel.SelectedName)"
                   asp-route-name3="@(Model.FilterDisciplinesViewModel.SelectedShortName)">

                   
                    <i class="fas fa-chevron-left"></i>
                </a>
            </li>
        }
        else
        {
            <li class="page-item disabled">
                <a class="page-link" href="#">
                    <i class="fas fa-chevron-left"></i>
                </a>
            </li>
        }
        @if (Model.PageViewModel.HasNextPage)
        {
            <li class="page-item">
                <a class="page-link" asp-action="Index" title="Вперед"
                   asp-route-page="@(Model.PageViewModel.PageNumber + 1)"
                   asp-route-sortOrder="@(Model.SortDisciplinesViewModel.Current)"
                   asp-route-code="@(Model.FilterDisciplinesViewModel.SelectedIndexProfModule)"
                   asp-route-name="@(Model.FilterDisciplinesViewModel.SelectedProfModule)"
                  asp-route-name1="@(Model.FilterDisciplinesViewModel.SelectedIndex)"
                   asp-route-name2="@(Model.FilterDisciplinesViewModel.SelectedName)"
                   asp-route-name3="@(Model.FilterDisciplinesViewModel.SelectedShortName)">

                    <i class="fas fa-chevron-right"></i>
                </a>
            </li>
        }
        else
        {
            <li class="page-item disabled">
                <a class="page-link" href="#">
                    <i class="fas fa-chevron-right"></i>
                </a>
            </li>
        }
    }
</ul>
</nav>
